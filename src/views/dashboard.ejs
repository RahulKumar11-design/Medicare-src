<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Outbreak Alert Dashboard</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            color: #333;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
            color: white;
        }

        .header h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .header p {
            font-size: 1.1rem;
            opacity: 0.9;
        }

        .search-section {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 8px 32px rgba(31, 38, 135, 0.37);
        }

        .search-container {
            display: flex;
            gap: 15px;
            align-items: center;
            margin-bottom: 20px;
        }

        .search-input {
            flex: 1;
            padding: 15px 20px;
            border: 2px solid #e1e5e9;
            border-radius: 50px;
            font-size: 16px;
            outline: none;
            transition: all 0.3s ease;
        }

        .search-input:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .search-btn {
            padding: 15px 30px;
            background: linear-gradient(45deg, #667eea, #764ba2);
            color: white;
            border: none;
            border-radius: 50px;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .search-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

        .filters {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .filter-select {
            padding: 10px 15px;
            border: 2px solid #e1e5e9;
            border-radius: 25px;
            font-size: 14px;
            outline: none;
            background: white;
        }

        .dashboard {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 30px;
        }

        .stats-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 25px;
            box-shadow: 0 8px 32px rgba(31, 38, 135, 0.37);
            border-left: 5px solid #667eea;
        }

        .stats-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .stats-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: #333;
        }

        .status-indicator {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: #10b981;
            animation: pulse 2s infinite;
        }

        .status-indicator.high { background: #ef4444; }
        .status-indicator.moderate { background: #f59e0b; }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        .metric {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 15px;
        }

        .metric-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            color: white;
        }

        .metric-icon.total { background: linear-gradient(45deg, #3b82f6, #1d4ed8); }
        .metric-icon.alerts { background: linear-gradient(45deg, #ef4444, #dc2626); }
        .metric-icon.location { background: linear-gradient(45deg, #10b981, #059669); }
        .metric-icon.time { background: linear-gradient(45deg, #f59e0b, #d97706); }

        .metric-info h3 {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 5px;
        }

        .metric-info p {
            color: #666;
            font-size: 0.9rem;
        }

        .alerts-section {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 8px 32px rgba(31, 38, 135, 0.37);
            margin-bottom: 30px;
        }

        .section-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .alert-card {
            border: 1px solid #e5e7eb;
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 15px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .alert-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: #10b981;
        }

        .alert-card.high::before { background: #ef4444; }
        .alert-card.moderate::before { background: #f59e0b; }
        .alert-card.critical::before { background: #dc2626; }

        .alert-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }

        .alert-header {
            display: flex;
            justify-content: between;
            align-items: center;
            margin-bottom: 15px;
        }

        .disease-name {
            font-size: 1.3rem;
            font-weight: 600;
            color: #333;
        }

        .severity-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
        }

        .severity-badge.low { background: #d1fae5; color: #065f46; }
        .severity-badge.moderate { background: #fef3c7; color: #92400e; }
        .severity-badge.high { background: #fee2e2; color: #991b1b; }
        .severity-badge.critical { background: #fecaca; color: #7f1d1d; }

        .alert-details {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 15px;
            margin-top: 15px;
        }

        .detail-item {
            text-align: center;
            padding: 10px;
            background: #f9fafb;
            border-radius: 8px;
        }

        .detail-value {
            font-size: 1.2rem;
            font-weight: 600;
            color: #333;
        }

        .detail-label {
            font-size: 0.8rem;
            color: #666;
            text-transform: uppercase;
            margin-top: 2px;
        }

        .no-alerts {
            text-align: center;
            padding: 40px;
            color: #666;
        }

        .no-alerts i {
            font-size: 3rem;
            margin-bottom: 15px;
            color: #10b981;
        }

        .loading {
            display: none;
            text-align: center;
            padding: 40px;
        }

        .spinner {
            border: 3px solid #f3f4f6;
            border-top: 3px solid #667eea;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto 20px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .chart-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 8px 32px rgba(31, 38, 135, 0.37);
            height: 400px;
        }

        .last-updated {
            text-align: center;
            color: white;
            font-size: 0.9rem;
            margin-top: 20px;
            opacity: 0.8;
        }

        @media (max-width: 768px) {
            .dashboard {
                grid-template-columns: 1fr;
            }
            
            .search-container {
                flex-direction: column;
            }
            
            .filters {
                justify-content: center;
            }
            
            .alert-details {
                grid-template-columns: 1fr 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <div class="header">
            <h1><i class="fas fa-virus"></i> Outbreak Alert Dashboard</h1>
            <p>Real-time Disease Outbreak Monitoring System for Health Authorities</p>
        </div>

        <!-- Search Section -->
        <div class="search-section">
            <div class="search-container">
                <input type="text" id="locationInput" class="search-input" placeholder="Enter location (e.g., Mumbai, Delhi, Bangalore...)" autocomplete="off">
                <button onclick="searchAlerts()" class="search-btn">
                    <i class="fas fa-search"></i> Search Alerts
                </button>
            </div>
            <div class="filters">
                <select id="hoursFilter" class="filter-select">
                    <option value="1">Last 1 Hour</option>
                    <option value="6">Last 6 Hours</option>
                    <option value="24" selected>Last 24 Hours</option>
                    <option value="72">Last 3 Days</option>
                    <option value="168">Last Week</option>
                </select>
                <select id="severityFilter" class="filter-select">
                    <option value="">All Severities</option>
                    <option value="CRITICAL">Critical Only</option>
                    <option value="HIGH">High & Above</option>
                    <option value="MODERATE">Moderate & Above</option>
                </select>
            </div>
        </div>

        <!-- Loading State -->
        <div id="loading" class="loading">
            <div class="spinner"></div>
            <p>Fetching outbreak data...</p>
        </div>

        <!-- Dashboard Stats -->
        <div id="dashboard" class="dashboard" style="display: none;">
            <div class="stats-card">
                <div class="stats-header">
                    <h3 class="stats-title">Location Overview</h3>
                    <div id="statusIndicator" class="status-indicator"></div>
                </div>
                <div class="metric">
                    <div class="metric-icon location">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div class="metric-info">
                        <h3 id="currentLocation">-</h3>
                        <p>Current Location</p>
                    </div>
                </div>
                <div class="metric">
                    <div class="metric-icon time">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="metric-info">
                        <h3 id="timeframe">-</h3>
                        <p>Time Period</p>
                    </div>
                </div>
            </div>

            <div class="stats-card">
                <div class="stats-header">
                    <h3 class="stats-title">Alert Statistics</h3>
                    <div class="status-indicator"></div>
                </div>
                <div class="metric">
                    <div class="metric-icon alerts">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="metric-info">
                        <h3 id="alertCount">0</h3>
                        <p>Active Alerts</p>
                    </div>
                </div>
                <div class="metric">
                    <div class="metric-icon total">
                        <i class="fas fa-chart-bar"></i>
                    </div>
                    <div class="metric-info">
                        <h3 id="totalReports">0</h3>
                        <p>Total Reports</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Alerts Section -->
        <div id="alertsSection" class="alerts-section" style="display: none;">
            <h2 class="section-title">
                <i class="fas fa-bell"></i> 
                Active Disease Alerts
            </h2>
            <div id="alertsList"></div>
        </div>

        <!-- Chart Section -->
        <div id="chartSection" class="chart-container" style="display: none;">
            <canvas id="diseaseChart"></canvas>
        </div>

        <div class="last-updated">
            <i class="fas fa-sync-alt"></i> 
            Last updated: <span id="lastUpdated">Never</span>
        </div>
    </div>

    <script>
        let currentChart = null;

        // Search function
        async function searchAlerts() {
            const location = document.getElementById('locationInput').value.trim();
            const hours = document.getElementById('hoursFilter').value;
            
            if (!location) {
                alert('Please enter a location');
                return;
            }

            showLoading();
            
            try {
                const response = await fetch(`/api/outbreak/${encodeURIComponent(location)}?hours=${hours}`);
                const data = await response.json();
            
                
                if (data.success) {
                    displayResults(data.data);
                } else {
                    showError('Failed to fetch alerts');
                }
            } catch (error) {
                console.error('Error:', error);
                showError('Network error occurred');
            }
        }

        function showLoading() {
            document.getElementById('loading').style.display = 'block';
            document.getElementById('dashboard').style.display = 'none';
            document.getElementById('alertsSection').style.display = 'none';
            document.getElementById('chartSection').style.display = 'none';
        }

        function displayResults(data) {
            document.getElementById('loading').style.display = 'none';
            document.getElementById('dashboard').style.display = 'grid';
            document.getElementById('alertsSection').style.display = 'block';
            document.getElementById('chartSection').style.display = 'block';

            // Update stats
            document.getElementById('currentLocation').textContent = data.location;
            document.getElementById('timeframe').textContent = data.timeframe;
            document.getElementById('alertCount').textContent = data.alerts.length;
            document.getElementById('totalReports').textContent = data.totalReports;
            
            // Update status indicator
            const indicator = document.getElementById('statusIndicator');
            const alertLevel = getAlertLevel(data.alerts);
            indicator.className = `status-indicator ${alertLevel}`;

            // Display alerts
            displayAlerts(data.alerts);
            
            // Create chart
            createChart(data.alerts);
            
            // Update timestamp
            document.getElementById('lastUpdated').textContent = new Date().toLocaleString();
        }

        function getAlertLevel(alerts) {
            if (alerts.some(alert => alert.count >= 15)) return 'critical';
            if (alerts.some(alert => alert.count >= 10)) return 'high';
            if (alerts.length > 0) return 'moderate';
            return 'low';
        }

        function getSeverity(count) {
            if (count >= 15) return 'CRITICAL';
            if (count >= 10) return 'HIGH';
            if (count >= 8) return 'MODERATE';
            return 'LOW';
        }

        function displayAlerts(alerts) {
            const container = document.getElementById('alertsList');
            
            if (alerts.length === 0) {
                container.innerHTML = `
                    <div class="no-alerts">
                        <i class="fas fa-shield-alt"></i>
                        <h3>No Active Alerts</h3>
                        <p>Great news! No disease outbreaks detected in this location during the selected time period.</p>
                    </div>
                `;
                return;
            }

            container.innerHTML = alerts.map(alert => {
                const severity = getSeverity(alert.count);
                const trend = Math.random() > 0.5 ? 'INCREASING' : 'STABLE'; // Simulate trend
                
                return `
                    <div class="alert-card ${severity.toLowerCase()}">
                        <div class="alert-header">
                            <h3 class="disease-name">
                                <i class="fas fa-virus"></i> ${alert.disease}
                            </h3>
                            <span class="severity-badge ${severity.toLowerCase()}">${severity}</span>
                        </div>
                        <div class="alert-details">
                            <div class="detail-item">
                                <div class="detail-value">${alert.count}</div>
                                <div class="detail-label">Cases Reported</div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-value">${trend}</div>
                                <div class="detail-label">Trend</div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-value">${alert.location}</div>
                                <div class="detail-label">Location</div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-value">${new Date().toLocaleDateString()}</div>
                                <div class="detail-label">Last Reported</div>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function createChart(alerts) {
            const ctx = document.getElementById('diseaseChart').getContext('2d');
            
            if (currentChart) {
                currentChart.destroy();
            }

            if (alerts.length === 0) {
                ctx.clearRect(0, 0, ctx.canvas.width, ctx.canvas.height);
                ctx.font = '16px Arial';
                ctx.fillStyle = '#666';
                ctx.textAlign = 'center';
                ctx.fillText('No data to display', ctx.canvas.width / 2, ctx.canvas.height / 2);
                return;
            }

            currentChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: alerts.map(alert => alert.disease),
                    datasets: [{
                        data: alerts.map(alert => alert.count),
                        backgroundColor: [
                            '#ef4444', '#f59e0b', '#10b981', '#3b82f6', '#8b5cf6',
                            '#f97316', '#06b6d4', '#84cc16', '#ec4899', '#6366f1'
                        ],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Disease Distribution',
                            font: { size: 16, weight: 'bold' }
                        },
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 15,
                                usePointStyle: true
                            }
                        }
                    }
                }
            });
        }

        function showError(message) {
            document.getElementById('loading').style.display = 'none';
            alert(message);
        }

        // Enter key support for search
        document.getElementById('locationInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchAlerts();
            }
        });

        // Filter change handlers
        document.getElementById('hoursFilter').addEventListener('change', function() {
            const location = document.getElementById('locationInput').value.trim();
            if (location) {
                searchAlerts();
            }
        });
    </script>
</body>
</html>